{
  "manifest_version": 3,
  "name": "Zigvy Timetracker",
  "version": "0.1.0",
  "description": "My Chrome Extension",
  "icons": {
    "16": "icons/zigvy.png",
    "32": "icons/zigvy.png",
    "48": "icons/zigvy.png",
    "128": "icons/zigvy.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Zigvy Timetracker",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "storage",
    "nativeMessaging"
  ],
  "host_permissions": ["*://time-tracker.zigvy.com/*", "*://*.zigvy.com/*"],
  "content_scripts": [
    {
      "matches": ["*://time-tracker.zigvy.com/*", "*://*.zigvy.com/*"],
      "run_at": "document_idle",
      "js": ["contentScript.js"]
    }
  ]
}
